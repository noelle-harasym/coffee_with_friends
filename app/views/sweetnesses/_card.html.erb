<div class="card mb-3">
  <h2 class="card-header h4">
    Sweetness #<%= sweetness.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Sweetness type</dt>
      <!-- Display sweetness_type start -->
      <dd><%= sweetness.sweetness_type %></dd>
      <!-- Display sweetness_type end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back sweetness, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link sweetness start -->
      <div class="col">
        <%= link_to edit_sweetness_url(sweetness), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link sweetness end -->

      <!-- Delete link sweetness start -->
      <div class="col">
        <%= link_to sweetness, method: :delete, data: { confirm: "Do you really want to delete this sweetness?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link sweetness end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(sweetness.updated_at) %> ago
  </div>
</div>
