<% was_validated = coffee_order.errors.any? %>

<%= form_with(model: coffee_order, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = coffee_order.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% coffee_order.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% coffee_type_class = "form-control" %>
    <% coffee_type_was_invalid = coffee_order.errors.include?(:coffee_type) %>

    <% if was_validated %>
      <% if coffee_type_was_invalid %>
        <% coffee_type_class << " is-invalid" %>
      <% else %>
        <% coffee_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :coffee_type_id %>
    <%= f.collection_select :coffee_type_id, CoffeeType.all, :id, :to_s, {}, class: "form-control" %>
    <% if coffee_type_was_invalid %>
      <% coffee_order.errors.full_messages_for(:coffee_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% modification_iced_class = "form-check-input" %>
    <% modification_iced_was_invalid = coffee_order.errors.include?(:modification_iced) %>

    <% if was_validated %>
      <% if modification_iced_was_invalid %>
        <% modification_iced_class << " is-invalid" %>
      <% else %>
        <% modification_iced_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :modification_iced, class: "form-check-label" do %>
      <%= f.check_box :modification_iced, class: modification_iced_class %> Modification iced
    <% end %>
    <% if modification_iced_was_invalid %>
      <% coffee_order.errors.full_messages_for(:modification_iced).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dairy_type_class = "form-control" %>
    <% dairy_type_was_invalid = coffee_order.errors.include?(:dairy_type) %>

    <% if was_validated %>
      <% if dairy_type_was_invalid %>
        <% dairy_type_class << " is-invalid" %>
      <% else %>
        <% dairy_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dairy_type_id %>
    <%= f.collection_select :dairy_type_id, DairyType.all, :id, :to_s, {}, class: "form-control" %>
    <% if dairy_type_was_invalid %>
      <% coffee_order.errors.full_messages_for(:dairy_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% modification_other_class = "form-control" %>
    <% modification_other_was_invalid = coffee_order.errors.include?(:modification_other) %>

    <% if was_validated %>
      <% if modification_other_was_invalid %>
        <% modification_other_class << " is-invalid" %>
      <% else %>
        <% modification_other_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :modification_other %>
    <%= f.text_area :modification_other, class: modification_other_class, placeholder: "Enter modification other" %>
    <% if modification_other_was_invalid %>
      <% coffee_order.errors.full_messages_for(:modification_other).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% rating_class = "form-control" %>
    <% rating_was_invalid = coffee_order.errors.include?(:rating) %>

    <% if was_validated %>
      <% if rating_was_invalid %>
        <% rating_class << " is-invalid" %>
      <% else %>
        <% rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :rating %>
    <%= f.number_field :rating, class: rating_class, placeholder: "Enter rating" %>
    <% if rating_was_invalid %>
      <% coffee_order.errors.full_messages_for(:rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% picture_class = "form-control" %>
    <% picture_was_invalid = coffee_order.errors.include?(:picture) %>

    <% if was_validated %>
      <% if picture_was_invalid %>
        <% picture_class << " is-invalid" %>
      <% else %>
        <% picture_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :picture %>
    <%= f.file_field :picture, class: "form-control" %>
    <% if picture_was_invalid %>
      <% coffee_order.errors.full_messages_for(:picture).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% date_class = "form-control" %>
    <% date_was_invalid = coffee_order.errors.include?(:date) %>

    <% if was_validated %>
      <% if date_was_invalid %>
        <% date_class << " is-invalid" %>
      <% else %>
        <% date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date %>
    <%= f.date_select :date, class: date_class, placeholder: "Enter date" %>
    <% if date_was_invalid %>
      <% coffee_order.errors.full_messages_for(:date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
